color(c){
    color: c;
    @media print{
        &{
            color: c!important;
            -webkit-print-color-adjust: exact!important;
        }
    }
}

background-color(c){
    background-color: c;
    @media print{
        &{
            background-color: c!important;
            -webkit-print-color-adjust: exact!important;
        }
    }
}

@page {
  size: Letter;
  margin: 0;
}

body, page{
    margin: 0;
    font-family: "Times New Roman",Times, serif;
    display: block;
    width: 100%;
}

page{
     @media print{
       height: 11in!important;
     }
}

.clear{
    clear: both;
}


hr{
    margin: 0!important;
}

.page-header{
    background-color: #2a2a2a;
    color: white;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content:space-between;
    padding: 20px 50px;
    font-family: calibri;
    padding-bottom: 35px;
    // font-family: Arial, Helvetica, sans-serif;
    .left{
        float: none;
        order: 1;
        flex-grow:0;
        .name{
            font-size: 3em;
            top: -10px;
            position: relative;
            color:aqua;
            .last{
                position: relative;
                top: 20px;
            }
        }

        .major{
            // margin-bottom: 20px;
            color: white;
            font-weight: 600;
        }

    }
    .right{
        order: 3;
        flex-grow:0;
        color: white;
		text-align:right;
        line-height: 20px;
    }
}

.page2 .page-header{
    // display: none;
    @media print{
        display: flex;
    }
    height: 20px;
    .left{
        .name{
            color: white;
            .last{
                position: relative;
                top: 0px;
                left: 10px;
            }
        }
    }
}
.page-body{
    border-left: 50px solid black;
}
.timeline{
    font-family: calibri;
    @media screen and (max-width:630px) {
        display: none;
    }
    height: 24px;
    position: relative;
    background-color: #dadada;
    display: flex;
    justify-content: space-between;
    padding-left: 20px;
    box-shadow: 0 2px 3px 0px black;
    .period{
        display: inline-block;
        position: relative;

        .desc{
            z-index: 9;
            position: relative;
            height: 20px;
            padding: 2px 10px 2px 10px;
            background-color: white;
            color: #000;
            border: 2px solid #000000;
            border-width: 0 2px 0 2px;
            // box-shadow: 0px 0px 2px 1px #000000;
            text-align: center;
            img{
                height: 19px;
            }
        }
        .year1{
            position: absolute;
            color: white;
            top: -23px;
            left: -17px;
            font-style: italic;
        }
        .year2{
            position: absolute;
            color: black;
            right: -25px;
            top: 30px;
            // font-weight: 600;
            font-style: italic;
        }

        &#uni{
            .desc{
                border-radius: 20px 0 0 20px;
            }
        }
        &#bb{
            img{
                height: 20px;
            }
        }
        &#ibm1{

        }
        &#grad{
            .desc{
                border-radius: 0 20px 20px 0;
            }
            .year1{
                height: 18px;
                display: block;
            }
        }
        &#ibm2{
            width: 130px;
            .desc{
                border-radius: 20px 0 0 20px;
                border-right: none;
            }
            .year2{
                left: 60px;
                width: 66px;
            }
        }
    }
}
.section{
    position: relative;
    padding: 10px 10px 0px 10px;
    h1{
	    transform: rotate(-90deg);
        transform-origin: 0 0;
        position: absolute;
        font-size: 1.75em;
        margin: auto auto;
        color: white;
        left: -1.2em;
    }

    h2{
        font-size: 1.5em;
    }
    p{
        font-size: 1.2em;
    }

    ////////////////
    // objective
    ///////////////
    &.objective{
        h1{
            top: 130px;
        }
        .content{
            min-height: 90px;
            padding: 33px 20px 10px 20px;
            p{
                margin: 0;
            }
        }
    }
    ////////////////
    // EDUCTAION
    ///////////////
    &.education{
        h1{
            top: 150px;
        }
        .content{
            .row1{
                display: flex;
                flex-direction: row;
                flex-wrap: wrap-reverse;
                justify-content:space-between;
                padding-left: 20px

                .right{
                    margin: 0 auto;
                    display: block;
                    img{
                        width: 100%;
                        max-height: 50px;
                        max-width: 130px;

                    }
                    h4{
                        text-align: center;
                        margin-top: 5;
                        margin-bottom: 0;
                    }
                }
                .left{
                     h2{
                         margin: 0;
                    }
                }
                @media screen and (max-width:660px){
                    &{
                        padding-left: 0px;
                        justify-content:space-around;
                    }
                }

                @media print{
                    &{
                        height: 70px;
                    }
                    .right{
                        img{
                            width:160px;
                        }
                    }
                }
            }
            .row2{
                padding-left: 20px;
                ul{
                    padding-left: 0;
                    margin-top: 5px;
                    list-style-type: none;
                    li{
                        float: left;
                        width: 100%;
                        .righted{
                            text-align: left;
                            width: 40%;
                            float: right;
                        }
                    }
                }
            }
        }
    }

    &.skills{
        .content{
            margin-bottom: 10px;
        }
        h1{
            top: 425px;
        }
        h3{
            margin-bottom: 0;
            margin-top: 8px;
        }
        .title{
            font-weight: 800;
        }
        object{
            max-width: 800px;
            margin: 0 auto;
            display: block;

        }
        @media print{
            object{
                max-height: 514px;
            }
        }

        keycolor(color){
            background-color: color
            @media print{
                background-color: color!important;
                -webkit-print-color-adjust: exact!important;
            }
        }
        .skill-map{
            border:2px solid black;
            border-radius: 5px;
            padding: 5px;
            display: flex;
            justify-content: space-between;
            .map-desc{
                display: inline-block;
                margin: 0;
                padding-left: 5px;
                font-size: 15px;
            }
            .map-key{
                top: 5px;
                position: relative;
                display: inline-block;
                border-radius: 10px;
                width: 20px;
                height: 20px;
                margin: 3px;
            }
            .key-dark{
                keycolor(#7b93a4ff);
            }
            .key-blue{
                keycolor(#92cbc4ff);
            }
            .key-light{
                keycolor(#b4f1c5ff);
            }

        }
        .made-with{
            font-size: small;
            display: none;
            @media print{
                display: block;
            }
        }
    }


    &.employment{
        padding-bottom: 30px;
        h1{
            top: 75vh;
            @media print{
                top: 55vh;
            }
        }
        .job-wrapper{
            padding-top:20px;
            // &:first-child{
            //     padding-top: 0;
            // }
            .job-title{
                height: 55px;
                display: block;
                padding: 0 20px;
                font-weight: 700;
                font-size: 1.1rem;
                .left{
                    float: left;
                }
                .right{
                    float: right;
                    padding-top: 2px;
                    line-height: 25px;
                    text-align: right;
                }
                .logo{
                    height: 24px;
                    padding-bottom: 4px;
                }
                .dates{
                    font-style: italic;
                    font-weight: 400;
                }
            }
            .job-details{
                padding-right: 20px;
                ul{
                    margin: 5px 0;
                }
            }
        }
    }
}
